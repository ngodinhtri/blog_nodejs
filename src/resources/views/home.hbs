<div class="mt-5">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-md-4 col col-lg-4">
            <div class="card ">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top" alt="{{this.img}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.desc}}</p>
                    <a href="#" class="btn btn-primary">Buy this course</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>